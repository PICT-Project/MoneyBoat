<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="295dp"
            android:layout_height="300dp"
            android:src="@drawable/c1" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Your\n  personal\n   wallet"
            android:fontFamily="cursive"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="156dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="50dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/fin2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="173dp"
            android:layout_marginLeft="86dp"
            app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="90dp"
            android:layout_marginTop="208dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fin"
            android:layout_marginRight="94dp"
            app:layout_constraintRight_toRightOf="@+id/textView28" />

        <TextView
            android:id="@+id/textView28"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here\n  to clear\n your vault!"

            android:textColor="@android:color/white"
            android:fontFamily="cursive"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="194dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="282dp"
            android:layout_marginLeft="278dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Click here to\nadd transactions!"
            android:layout_marginTop="9dp"
            android:textColor="@android:color/white"
            android:fontFamily="cursive"
            app:layout_constraintTop_toBottomOf="@+id/imageView10"
            android:layout_marginLeft="140dp"
            android:textSize="18sp"

            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/fin4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="357dp"
            android:layout_marginLeft="171dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep swiping -->"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="511dp"
            android:layout_marginLeft="135dp"
            app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>